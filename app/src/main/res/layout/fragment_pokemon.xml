<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cv_background"
    tools:context=".pokemon.ui.PokemonFragment">

    <ImageView
        android:id="@+id/ivPokemonPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@null"
        android:background="@drawable/poke_background"
        tools:src="@drawable/pokemon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNomAndName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPokemonPhoto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="No. 148" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdFirst"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPokemonPhoto"
        app:layout_constraintTop_toBottomOf="@id/tvNomAndName" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPokemonPhoto"
        app:layout_constraintTop_toBottomOf="@id/mdFirst"
        tools:text="Macho"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdSecond"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPokemonPhoto"
        app:layout_constraintTop_toBottomOf="@id/tvGender" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPokemonPhoto"
        app:layout_constraintTop_toBottomOf="@id/mdSecond"
        tools:text="Height"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdThird"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPokemonPhoto"
        app:layout_constraintTop_toBottomOf="@id/tvHeight" />

    <TextView
        android:id="@+id/tvWidth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivPokemonPhoto"
        app:layout_constraintTop_toBottomOf="@id/mdThird"
        tools:text="width"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/mdFourth"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWidth" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="3"
        android:textColor="@color/black"
        android:ellipsize="end"
        tools:text="vbrvbhklrsbilayrdefyirqeouvouewvcrcrcdibvarbvirbaciareiviybvibcibaaciayibvlbvcsbuilsrbvirvib"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mdFourth"/>

</androidx.constraintlayout.widget.ConstraintLayout>